<Window x:Class="FAA.WizardEditor.TextEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAA.WizardEditor"
        mc:Ignorable="d"
        Title="Wizard Text" Height="549.167" Width="545.833" MinWidth="500" MinHeight="400" Icon="Icons/pencil.png">
    <Grid>
        <TextBox x:Name="TextField" Margin="10,10,10,50" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" UndoLimit="20"/>
        <Button x:Name="ButtonOk" Content="OK" Margin="92,0,225,10" Height="25" VerticalAlignment="Bottom" Width="75" Click="ButtonOk_Click"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Margin="200,0,117,10" Height="25" VerticalAlignment="Bottom" Width="75" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
