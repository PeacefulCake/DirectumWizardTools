<Window x:Class="FAA.WizardEditor.TextEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAA.WizardEditor"
        mc:Ignorable="d"
        Title="Wizard Text" Height="400" Width="400" MinWidth="400" MinHeight="400">
    <Grid>
        <TextBox x:Name="TextField" Margin="10,10,10,34" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" UndoLimit="20"/>
        <Button x:Name="ButtonOk" Content="OK" Margin="95,0,204,9" Height="20" VerticalAlignment="Bottom" Width="75" Click="ButtonOk_Click"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Margin="191,0,108,9" Height="20" VerticalAlignment="Bottom" Width="75" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
